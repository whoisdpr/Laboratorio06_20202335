<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="14dp"
    android:layout_margin="8dp"
    android:background="@drawable/item_tarea_bg"
    android:elevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TÃ­tulo de la tarea"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tvEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â³ Pendiente"
            android:textSize="11sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginStart="12dp"
            android:background="#E8F5E9"
            android:textColor="#2E7D32"
            android:gravity="center" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvFecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“… Fecha: 01/01/2025"
        android:textSize="13sp"
        android:textColor="#666666"
        android:layout_marginBottom="14dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:spacing="8dp">

        <Button
            android:id="@+id/btnEditar"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Editar"
            android:textSize="12sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/btn_edit_bg" />

        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Eliminar"
            android:textSize="12sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_delete_bg" />

    </LinearLayout>

</LinearLayout>

